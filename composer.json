{
    "$schema": "https://getcomposer.org/schema.json",
    "name": "bvp/trimmer",
    "description": "The BVP Trimmer package for strings, arrays, and objects.",
    "keywords": [
        "boatrace",
        "library",
        "trimmer"
    ],
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "shimomo",
            "email": "bvp@shimomo.net"
        }
    ],
    "support": {
        "issues": "https://github.com/shimomo/bvp-trimmer/issues",
        "source": "https://github.com/shimomo/bvp-trimmer"
    },
    "require": {
        "php": "^8.2",
        "myclabs/deep-copy": "^1.11"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.1 || ^11.1 || ^12.0"
    },
    "autoload": {
        "psr-4": {
            "BVP\\Trimmer\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "BVP\\Trimmer\\Tests\\": "tests/"
        }
    }
}
